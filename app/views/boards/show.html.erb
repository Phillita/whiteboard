<div class="bs-header">
  <div class="container">
    <h1><%= @board.name %></h1> 
  </div>
  <%= link_to raw("<i class=\"fa fa-edit\"></i>"), edit_board_path(@board) %> |
  <%= link_to raw("<i class=\"fa fa-trash-o\"></i>"), @board, method: :delete, data: { confirm: 'Are you sure?' } %> |
  <%= link_to 'Add Tickets', new_ticket_path(id: @board.id) %> |
  <%= link_to 'Back', boards_path %>
</div>

<blockquote class="text-info">
  <p id="ticket-story"></p>
</blockquote>
<div id="columns">
	<% @columns.order(:order).each do |c| %>
		<h4 class="column_header "><%= c.label %></h4>
	<% end %>
</div>
<div id="container" data-columns="<%= @columns.count %>" data-rows="<%= @rows.count %>" data-stickey="<%= image_path('default_stickey.png') %>"></div>
<div id="rows">
	<% @rows.order(:order).each do |r| %>
		<div class="row_header"><h4><%= r.label %></h4></div>
	<% end %>
</div>