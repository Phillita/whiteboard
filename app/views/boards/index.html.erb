<h1>Listing boards</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= link_to board.name, board %></td>
        <td><%= link_to raw("<i class=\"fa fa-edit\"></i>"), edit_board_path(board) %> |
        <%= link_to raw("<i class=\"fa fa-trash-o\"></i>"), board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Board', new_board_path %>
